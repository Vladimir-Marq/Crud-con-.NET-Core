@model ProyectoDesarrollo.Models.Countries

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Countries</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayFor(model => model.COUNTRY_ID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.COUNTRY_NAME)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.REGION_ID)
        </dt>
    </dl>

    <form asp-action="DeleteConfirm" method="post">
        @Html.AntiForgeryToken()  <!-- Para prevenir CSRF -->
        <input type="hidden" name="id" value="@Model.COUNTRY_ID" />
        <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this?');" />
    </form>
</div>
